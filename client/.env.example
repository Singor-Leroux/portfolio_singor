# Configuration de l'API
VITE_API_URL=http://localhost:5000/api/v1

# Environnement (development, production)
NODE_ENV=development

# Configuration d'authentification
VITE_TOKEN_NAME=portfolio_token
VITE_REFRESH_TOKEN_NAME=portfolio_refresh_token
VITE_TOKEN_EXPIRES_IN=7d

# URL du frontend (utilisé pour les redirections)
VITE_CLIENT_URL=http://localhost:3000

# Configuration de débogage
VITE_DEBUG=true

# Clés d'API (si nécessaire)
# VITE_GOOGLE_ANALYTICS_ID=your-ga-id
# VITE_EMAILJS_SERVICE_ID=your-emailjs-service-id
# VITE_EMAILJS_TEMPLATE_ID=your-emailjs-template-id
# VITE_EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# Configuration du thème (optionnel)
VITE_DEFAULT_THEME=light

# Configuration des fonctionnalités (optionnel)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE=false
